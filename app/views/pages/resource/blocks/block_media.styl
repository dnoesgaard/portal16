.block {
  &__header {
    font-size: 24px;
    line-height: 1.3em;
    font-weight: 500;
    padding: 64px 16px;
    margin: 0;
    &__small {
      font-size: 16px;
    }
  }

  &__description {
    margin: 16px 32px 80px 32px;
    padding: 16px;
    max-width: 100%;
    width: 480px;
    font-size: 16px;
    line-height: 32px;
  }

  &__actions {
    margin: 0 -16px;
    margin-top: 64px;
    font-weight: 500;
  }

  &__action {
    display: inline-block;
    margin: 0 16px;
  }
  &__imageArea {
    &--rounded {
      img {
        border-radius: 50%;
      }
    }
  }
}

+isAbove(768px) {
  .block {
    &__header {
      padding-top: 96px
      font-size: 28px;
    }
    &__actions {
      margin-top: 32px;
    }
  }
}

+isAbove(1000px) {
  .block {
    &__header {
      font-size: 32px;
    }
    &__actions {
      margin-top: 64px;
    }
  }
}