        {% if main.fields.title and not main.fields.hideTitle %}
        <h2 id="_{$ main.fields.title | slug() $}">{$ main.fields.title | renderMarkdownCustom(["i", "a"], ["name"]) $}</h2>
        {% endif %}
        {% include "../../body.nunjucks" %}
    </div>
</div>