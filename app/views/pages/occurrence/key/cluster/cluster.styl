.searchCard__features {
  display flex
  flex-wrap nowrap
  margin 0 -16px;
  > div {
    flex 0 0 auto;
    margin: 5px 16px
  }
  &__icon {
    margin-right 8px
  }
}
.searchCard__expand {
  margin auto
  text-align center
  position relative
  a {
    display inline-block
    padding: 3px 8px
    border-radius 50px
    border 1px solid #dbe3e7
    position relative
    bottom -15px
    background white
    font-size 12px
    width: 80px;
  }
}